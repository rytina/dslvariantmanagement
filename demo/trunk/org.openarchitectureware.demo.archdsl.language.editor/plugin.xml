<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.openarchitectureware.demo.archdsl.language.editor.AdslEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="adsl"
            icon="icons/file.gif"
            id="org.openarchitectureware.demo.archdsl.language.editor.AdslEditor"
            name="adsl Editor">
      </editor>
   </extension>

   <extension
         point="org.eclipse.ui.newWizards">

		<wizard
			category="org.openarchitectureware.xtext.wizards"
			class="org.openarchitectureware.demo.archdsl.language.wizards.NewAdsllProjectWizard"
			icon="icons/template.gif"
			id="org.openarchitectureware.demo.archdsl.language.wizards.NewAdsllProjectWizard"
			name="ADSL Project"
			project="true">
		</wizard>
         
		<wizard
			category="org.openarchitectureware.xtext.wizards"
			class="org.openarchitectureware.demo.archdsl.language.wizards.NewAdslFileWizard"
			icon="icons/file.gif"
			id="org.openarchitectureware.demo.archdsl.language.wizards.NewAdslFileWizard"
			name="adsl Editor file">
		</wizard>
	</extension>
</plugin>
